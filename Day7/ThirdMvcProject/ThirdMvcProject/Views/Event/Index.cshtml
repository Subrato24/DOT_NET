@using ThirdMvcProject.Models
@model List<Event>

@{
    ViewBag.Title = "Event List";
}

@if (Model.Count > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Fee</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Event eve in Model)
            {
                <tr>
                    <td>@eve.eventName</td>
                    <td>@eve.startdate</td>
                    <td>@eve.enddate</td>
                    <td>@eve.fees</td>
                    <td>
                        @Html.ActionLink("SHOW", "Details", new { id = eve.eventId }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>@Html.ActionLink("Add events", "Create", new { @class = "btn btn-info" })</p>
    
}
else
{
    <h1>Sorry! there are no events right now</h1>
}